# Privacy Oracle Agent Configuration

# Required for creating markets
# Can be base58 string or JSON array format
WALLET_PRIVATE_KEY=

# Helius API key for reliable RPC access
# Get one free at https://helius.dev
HELIUS_API_KEY=

# Anthropic API key for AI-powered market generation
# Get one at https://console.anthropic.com
ANTHROPIC_API_KEY=

# Network: devnet or mainnet
NETWORK=devnet

# Default market settings
DEFAULT_LIQUIDITY=1000000
DEFAULT_DURATION_DAYS=30

# PNP proxy URL (optional, uses default if not set)
# PNP_PROXY_URL=https://api.pnp.exchange

# Daemon settings
DAEMON_SCHEDULE=1h
DAEMON_MARKETS_PER_ROUND=1
DAEMON_STORAGE_PATH=./data/markets.db

# News monitoring
NEWS_ENABLED=false
NEWS_CHECK_INTERVAL=300000

# Webhook server
WEBHOOK_ENABLED=false
WEBHOOK_PORT=3000
WEBHOOK_AUTH_TOKEN=

# AI settings
AI_ENABLED=true
AI_MIN_RELEVANCE_SCORE=50
